{
  "name": "time-off-request-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:single": "bash scripts/dev-single.sh",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy:single": "bash scripts/deploy-single.sh",
    "deploy:fullstack": "bash scripts/deploy-fullstack.sh",
    "deploy:cloudflare": "bash scripts/deploy-cloudflare.sh",
    "deploy:railway": "bash scripts/deploy-railway.sh",
    "docker:build": "docker build -f Dockerfile.single -t timeoff-manager:latest .",
    "docker:run": "docker run -p 3000:3000 timeoff-manager:latest",
    "docker:compose": "docker-compose -f docker-compose.single.yml up -d",
    "docker:logs": "docker-compose -f docker-compose.single.yml logs -f",
    "docker:stop": "docker-compose -f docker-compose.single.yml down",
    "cf:dev": "wrangler dev",
    "cf:deploy": "wrangler deploy",
    "cf:db:create": "wrangler d1 create timeoff-manager-db",
    "cf:db:local": "wrangler d1 execute timeoff-manager-db --local --file=./schema.sql",
    "cf:db:remote": "wrangler d1 execute timeoff-manager-db --file=./schema.sql",
    "cf:logs": "wrangler tail",
    "cf:db:console": "wrangler d1 execute timeoff-manager-db --command",
    "mobile:build": "npm run build && npx cap sync",
    "mobile:android": "npm run mobile:build && npx cap open android",
    "mobile:ios": "npm run mobile:build && npx cap open ios",
    "mobile:run:android": "npm run mobile:build && npx cap run android",
    "mobile:run:ios": "npm run mobile:build && npx cap run ios",
    "mobile:add:ios": "npx cap add ios",
    "mobile:sync": "npx cap sync",
    "mobile:copy": "npx cap copy"
  },
  "dependencies": {
    "@capacitor/android": "^5.7.0",
    "@capacitor/core": "^5.7.0",
    "@capacitor/ios": "^5.7.0",
    "@capacitor/app": "^5.0.6",
    "@capacitor/haptics": "^5.0.6",
    "@capacitor/keyboard": "^5.0.6",
    "@capacitor/status-bar": "^5.0.6",
    "@capacitor/splash-screen": "^5.0.6",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.0",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.1",
    "zustand": "^4.4.7",
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.7.0",
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "wrangler": "^4.0.0",
    "semver": "^7.7.2"
  }
}